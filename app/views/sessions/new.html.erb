<div class="col-sm-6 offset-sm-3 mt-3 mb-3">
    <h2 class="text-center border-bottom p-3">ログイン</h2>
</div>

<div class="col-sm-6 offset-sm-3">
    <%= form_with(url: 'login', scope: :session, local: true) do |f| %>
    
        <div class="border-bottom p-3">
            <div class="form-group">
                <%= f.label :email, 'メールアドレス：' %>
                <%= f.email_field :email, class: 'form-control'%>
            </div>
            
            <div class="form-group">
                <%= f.label :password, 'パスワード：' %>
                <%= f.password_field :password, class: 'form-control'%>
            </div>
        </div>
        
            <div class="form-group mt-4 text-center">
                <%= button_tag type: 'submit', class: "btn btn-outline-light" do %>
                    ログイン<i class="far fa-paper-plane ml-2"></i>
                <% end %>
            </div>
            <div class="text-center">
                新規登録がまだの方はこちら→<%= link_to '新規登録', signup_path, class: 'btn btn-outline-dark' %>
            </div>
    <% end %>
</div>
