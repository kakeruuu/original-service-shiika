<div class="media">
  <% if @user.image.present? %>
    <%= image_tag @user.image.to_s, size: 150, class: 'd-flex mr-3 rounded ' %>
  <% else %>
    <%= image_tag 'giga_kaeru110-2.png', size: 150, class: 'd-flex mr-3 rounded' %>
  <% end %>
  <div class="media-body shadow p-3 rounded">
    <h2 class="mt-0"><%= @user.name %></h2>
    <div>
      <p>
        <% if @user.profile.present? %>
          <%= @user.profile %>
        <% else %>
          <%= 'よろしくお願いします' %>
        <% end %>
      </p>
      <% if current_user == @user %>
        <%= link_to '編集', edit_user_url, class: 'btn btn-outline-dark' %>
      <% end %>
    </div>
  </div>
</div>
<ul class="mt-4">
  <% @user.posts.each do |post| %>
    <li>
      <div class="row shadow m-2 p-2">
        <div class="offset-sm-1 col-sm-10">
          <% if current_user == post.user %>
            <%= link_to '削除', post, method: :delete,  class: 'btn btn-danger btn-sm' %>
          <% end %>
          <%= post.created_at %>
          <h4>
            <%= post.content %>
            <%= post.two_content %>
            <%= post.three_content %>
            <%= post.four_content %>
            <%= post.five_content %>
          </h4>
        </div>
      </div>
    </li>
  <% end %>
</ul>


